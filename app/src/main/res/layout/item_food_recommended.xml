<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp">

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/food0"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginStart="-21dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="31dp"
            android:paddingEnd="10dp"
            android:paddingVertical="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recommended_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BigText"
                android:text="Nutitious fruit meal in china" />

            <TextView
                android:id="@+id/food_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                style="@style/SmallText"
                android:text="With chinese characteristics"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    app:drawableStartCompat="@drawable/circle"
                    app:drawableTint="@color/iconColor1"
                    style="@style/SmallText"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Normal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    app:drawableStartCompat="@drawable/ic_baseline_location_24"
                    app:drawableTint="@color/mainColor"
                    style="@style/SmallText"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="1.7km"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    app:drawableStartCompat="@drawable/ic_baseline_time_24"
                    app:drawableTint="@color/iconColor2"
                    style="@style/SmallText"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:text="32min"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>